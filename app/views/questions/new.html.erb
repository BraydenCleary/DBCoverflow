<h1>Post New Question!</h1>

<% if @errors %>
  <% @errors.each do |error| %>
    <li><%= error %></li>
  <% end %>  
<% end %>    

<%= form_for @question do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>  

